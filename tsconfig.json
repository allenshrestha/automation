{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "@playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@lib/core/*": ["lib/core/*"],
      "@tests/*": ["tests/*"],
      "@pages/*": ["pages/*"],
      "@schemas/*": ["schemas/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "reports"]
}